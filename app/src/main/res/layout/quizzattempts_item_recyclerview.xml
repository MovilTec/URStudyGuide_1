<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/quizzattempts_arrow_imageView"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="7dp"
            app:srcCompat="@drawable/ic_keyboard_arrow_up_24dp"
            android:contentDescription="drop down image" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="60dp"
            android:padding="?android:listPreferredItemPaddingLeft"
            >

            <TextView
                android:id="@+id/quizzattempts_name_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quizz_attempts_item_student_name"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/quizzattempts_grade_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quizz_attempts_item_grade_average"
                android:textSize="18sp" />

        </LinearLayout>

</FrameLayout>
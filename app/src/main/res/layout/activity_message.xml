<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageActivity">

    <include
        android:id="@+id/message_app_bar"
        layout="@layout/app_bar_layout" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/message_RecyclerView"
        android:layout_width="368dp"
        android:layout_height="451dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/message_LinearLayout"
        app:layout_constraintTop_toBottomOf="@+id/message_app_bar"
        tools:layout_editor_absoluteX="8dp">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/message_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="?attr/colorButtonNormal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="54dp">

        <ImageButton
            android:id="@+id/message_addImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?android:attr/colorBackground"
            app:srcCompat="@drawable/ic_add_black_24dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="519dp" />

        <EditText
            android:id="@+id/message_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Enter Message...."
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/message_sendImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?android:attr/colorBackground"
            app:srcCompat="@drawable/ic_send_black_24dp"
            tools:layout_editor_absoluteX="326dp"
            tools:layout_editor_absoluteY="513dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>